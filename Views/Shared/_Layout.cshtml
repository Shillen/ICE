<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ICE Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/datatable")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <img class="centeredImg" src="~/Content/Images/windesheim.png" alt="Windesheim" />
        <div class="masthead">
            <ul class="nav nav-justified">
                <li class="navLi">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "active" })</li>
                <li class="navLi">@Html.ActionLink("Broadcasts", "Index", "Broadcasts")</li>
                <li class="navLi">@Html.ActionLink("Buildings", "Index", "Buildings")</li>
                <li class="navLi">@Html.ActionLink("Emergencies", "Index", "Emergencies")</li>
                <li class="navLi">@Html.ActionLink("Messages", "Index", "PredefinedMessages")</li>
                <li class="navLi">@Html.ActionLink("Users", "Index", "Users")</li>
                @if (((ICE_Server.Models.Views.Authentication.UserViewModel)Session["User"]) != null &&
                    ((ICE_Server.Models.Views.Authentication.UserViewModel) Session["User"]).Role.Name == "Admin")
                {
                    <li class="navLi">@Html.ActionLink("Settings", "Index", "Settings")</li>
                }
                <li class="navLi">@Html.ActionLink("Logout", "LogOff", "Account")</li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
    </div>
    <footer class="mainFooter">
        <div>
            <div class="divLeft">
                ICE Web application - &copy; @DateTime.Now.Year All rights reserved
            </div>

            <div class="divRight">
                Download the <a href="#">Android</a> or <a href="#">iOS</a> application - @Html.ActionLink("Disclaimer", "Disclaimer", "Home")
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datetime")
    @Scripts.Render("~/bundles/table")
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
    $(document).ready(function () {
        $('#broadcasts').dataTable({
            "columns": [
              { "width": "10%" },
              { "width": "45%" },
              { "width": "20%" },
              { "width": "15%" },
              { "width": "10%" }
            ],
            bFilter: false, bInfo: false
        });
        $('#overview').dataTable({ bFilter: false, bInfo: false });
        $('#devices').dataTable({
            "columns": [
              { "width": "10%" },
              { "width": "60%" },
              { "width": "15%" },
              { "width": "15%" }
            ],
             bFilter: false, bInfo: false
        });
    });
    </script>
</body>
</html>
