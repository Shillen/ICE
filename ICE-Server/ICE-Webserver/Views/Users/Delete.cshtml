@model ICE_Server.Models.User

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <hr class="hr-primary" />
    <ol class="breadcrumb bread-primary ">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("User overview", "Index", "User")</li>
        <li>Delete user</li>
    </ol>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Are you sure you want to delete this user?</h3>
            </div>
            <table class="table">
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Id)</strong></td>
                    <td>@Html.DisplayFor(model => model.Id)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.UserName)</strong></td>
                    <td>@Html.DisplayFor(model => model.UserName)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Email)</strong></td>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
            </table>
            <div class="panel-footer rightText">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <input type="button" value="Go back" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Users")'" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>