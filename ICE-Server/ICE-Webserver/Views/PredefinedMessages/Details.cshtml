@model ICE_Webserver.ViewModels.PredefinedMessageViewModel

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <hr class="hr-primary" />
    <ol class="breadcrumb bread-primary ">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Predefined messages overview", "Index", "PredefinedMessages")</li>
        <li>Predefined message details</li>
    </ol>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Predefined message details</h3>
            </div>
            <table class="table">
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.ID)</strong></td>
                    <td>@Html.DisplayFor(model => model.ID)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Name)</strong></td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.EmergencyName)</strong></td>
                    <td>@Html.DisplayFor(model => model.EmergencyName)</td>
                </tr>
                @if (Model.Languages != null){
                    foreach (var item in Model.Languages)
                    {
                        <tr>
                            <td><strong>Translation for @Html.LabelFor(model => item.Code, item.Code)</strong></td>
                            <td>@Html.DisplayFor(model => Model.PredefinedMessageTranslations.FirstOrDefault(x => x.LanguageID == item.ID).Message)</td>
                        </tr>
                    }
                }
                
            </table>
            <div class="panel-footer rightText">
                <input type="button" value="Go back" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "PredefinedMessages")'" />
                <input type="button" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "PredefinedMessages ", new { id = Model.ID })" />
            </div>
        </div>
    </div>
</div>
