@model ICE_Webserver.ViewModels.PredefinedMessageViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <hr class="hr-primary" />
    <ol class="breadcrumb bread-primary ">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Predefined message", "Index", "PredefinedMessages")</li>
        <li>Edit predefined message</li>
    </ol>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Edit predefined message</h3>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.Label("Emergency", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <select class="form-control" name="EmergencyId" id="EmergencyId">
                                    @if (Model.Emergencies != null)
                                    {
                                        foreach (var item in Model.Emergencies)
                                        {
                                            if (item.ID == Int32.Parse(Model.EmergencyId))
                                            {
                                                <option selected value="@item.ID">@item.Name</option>
                                            }
                                            else {
                                                <option value="@item.ID">@item.Name</option>
                                            }
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        @if (Model.PredefinedMessageTranslations != null)
                        {
                            foreach (var item in Model.PredefinedMessageTranslations)
                            {
                                <div class="form-group">
                                    @Html.LabelFor(model => item.Message, "Translation for " + Model.Languages.FirstOrDefault(x => x.ID == item.LanguageID).Code, htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        @*@Html.EditorFor(model => item.Name, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => item.Name, "", new { @class = "text-danger" })*@
                                        <input id="LanguageIds" name="LanguageIds" type="hidden" value="@item.LanguageID">
                                        <input type="text" name="Translations" value="@item.Message" class="form-control" />
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="panel-footer rightText">
                    <input type="button" value="Cancel" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "PredefinedMessages")'" />
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}