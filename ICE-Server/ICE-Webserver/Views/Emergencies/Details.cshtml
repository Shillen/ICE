@model ICE_Webserver.ViewModels.EmergencyViewModel

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <hr class="hr-primary" />
    <ol class="breadcrumb bread-primary ">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Emergency overview", "Index", "Emergencies")</li>
        <li>Emergency details</li>
    </ol>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Emergency details</h3>
            </div>
            <table class="table">
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.ID)</strong></td>
                    <td>@Html.DisplayFor(model => model.ID)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Name)</strong></td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                @if (Model.EmergencyTranslations != null)
                {
                    foreach (var item in Model.EmergencyTranslations)
                    {
                        <tr>
                            <td><strong>Translation for @Html.LabelFor(model => Model.Languages.FirstOrDefault(x => x.ID == item.LanguageID).Code, Model.Languages.FirstOrDefault(x => x.ID == item.LanguageID).Code)</strong></td>
                            <td>@Html.DisplayFor(model => item.Name)</td>
                        </tr>
                    }
                }
            </table>
            <div class="panel-footer rightText">
                <input type="button" value="Go back" class="btn btn-warning" onclick="location.href='@Url.Action("Index", "Emergencies")'" />
                <input type="button" value="Edit" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Emergencies", new { id = Model.ID }) |'" />
            </div>
        </div>
    </div>
</div>
