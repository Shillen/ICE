@model ICE_Webserver.ViewModels.EmergencyViewModel

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <hr class="hr-primary" />
    <ol class="breadcrumb bread-primary ">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Emergency overview", "Index", "Emergencies")</li>
        <li>Create Emergency</li>
    </ol>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Create an emergency</h3>
                </div>
                <div class="panel-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @if (Model.Languages != null)
                        {
                            foreach (var item in Model.Languages)
                            {
                                <div class="form-group">
                                    @Html.LabelFor(model => Model.Translations, "Translation for " + item.Code ,htmlAttributes: new { @class = "control-label col-md-3" })
                                    <div class="col-md-9">
                                        <input id="LanguageIds" name="LanguageIds" type="hidden" value="@item.ID">
                                        <input type="text" name="Translations" value="" class="form-control" />
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="panel-footer rightText">
                    <input type="button" value="Cancel" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Emergencies")'" />
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}
